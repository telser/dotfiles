# ~/.conkyrc
 #
 #
 #

 # # Use double buffering (eliminates flickering)
double_buffer yes

# Boolean value, if true, Conky will be forked to background when started. 
background yes

# Subtract (file system) buffers from used memory
no_buffers yes

# Use Xft (anti-aliased font and stuff) 
use_xft no
xftfont Bitstream Vera Sans Mono:size=10
xftalpha 0.8

# Update interval in seconds
update_interval 1.0
 
# This is the number of times Conky will update before quitting.
# Set to zero to run forever.
 total_run_times 0

# Should Conky use it's own window?
own_window no

# Needed for transparency
own_window_argb_visual yes

# Makes conky's window transparent
own_window_transparent yes

# If own window set type
own_window_type desktop

# If own window set hints
own_window_hints below,skip_taskbar,skip_pager, undecorated

# If own window set classname
own_window_class conky

# Minimum size of the window
minimum_size 200 5

# Maximum width of the window
maximum_width 600

#text_buffer_size 2000

# Where to place the conky "window"
alignment bottom_right

# On dual screen setup conky draws the window on the second screen when using align right
# the following values adjust the conky window to be drawn on first screen (depending on 
# resolution of the 2nd screen ofcourse)
gap_x 20
gap_y 60

draw_shades no
draw_outline no
draw_borders no

# Case for all the characters in conky
uppercase no

cpu_avg_samples 2
net_avg_samples 2

# While using a mono font prevents text from moving around
use_spacer left

color1 73FF00
color2 cccccc
color3 777777


TEXT
${exec cal -3}

${if_up eth0}${voffset 3}${color1}Network ${color}($nodename) ${color2}${hr}
${color}eth0: ${color0}Down:${color yellow1} ${downspeed eth0}/s ${color0}Up:${color OrangeRed1} ${upspeed eth0}/s
${color9}${downspeedgraph eth0 24,150 000000 91ec31} ${color9}${upspeedgraph eth0 24,150 000000 ec3131}
${color0}Address: ${color}${addr eth0}${alignr}${color0}TCP Connections: ${color}${tcp_portmon 1 65535 count}
${if_gw}${color0}gateway: ${color}${gw_ip}$endif${alignr}${color0}dns: ${color}${nameserver}${endif}

${if_up wlan0}${voffset 3}${color1}Network ${color}($nodename) ${color2}${hr}
${color}wlan0: ${color0}Down:${color yellow1} ${downspeed wlan0}/s ${color0}Up:${color OrangeRed1} ${upspeed wlan0}/s
${color9}${downspeedgraph wlan0 24,150 000000 91ec31} ${color9}${upspeedgraph wlan0 24,150 000000 ec3131}
${color0}Address: ${color}${addr wlan0}${alignr}${color0}TCP Connections: ${color}${tcp_portmon 1 65535 count}
${if_gw}${color0}gateway: ${color}${gw_ip}$endif${alignr}${color0}dns: ${color}${nameserver}${endif}

${color1}Updates:${color}${hr}
${execi 3593 rm -f /tmp/paconky/db.lck} # Use a prime just in case they overlap...
${execi 3600 ~/./paknotify.py /tmp/paconky/}
${hr} 

${color1}Audio:${color}${hr}
Vol: ${mixer }% ${mixerbar }
