! General settings
*.background:        #000000
*.foreground:        #FFFFFF

!black
*.color0:  #000000
*.color8:  #404040
!red
*.color1:  #CD0000
*.color9:  #FF0000
!green
*.color2:  #00CD00
*.color10: #00FF00
!yellow
*.color3:  #CDCD00
*.color11: #FFFF00
!blue
*.color4:  #0000EE
*.color12: #5C5CFF
!magenta
*.color5:  #CD00CD
*.color13: #FF00FF
!cyan
*.color6:  #00CDCD
*.color14: #00FFFF
!white
*.color7:  #FAEBD7
*.color15: #FFFFFF

! XTerm specific settings...
XTerm*renderFont: true
XTerm.termName: xterm-256color
XTerm.*.faceName: xft:Hack:size=13:antialias=true
XTerm.*.metaSendsEscape: true
XTerm.*.selectToClipboard: true
!XTerm.*.saveLines: 90000
XTerm.*.scrollBar: true
XTerm.*.scrollbar.width: 12

! urxvt settings
! URxvt.termName:          xterm-256color
URxvt.transparent:       false
URxvt.cursorBlink:       false
URxvt.scrollBar_right:   true
URxvt.thickness:         14
URxvt.scrollstyle:       next
URxvt.font: xft:Hack:style=Regular:size=10:antialias=true
! URxvt*skipBuiltinGlyphs: false
URxvt*iso14755: true
URxvt*iso14755_52: true
! URxvt.letterSpace:-2

Xft.lcdfiler: lcddefault
Xft.antialias: true
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.dpi: 144
