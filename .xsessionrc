then
  wicd-gtk &
  conky -c .conkyLeftrc &
  conky -c .conkyRightrc &
fi

xset b off &

xrdb -merge ~/.Xresources

xmodmap ~/.Xmodmap

urxvtd -q -o -f &

~/./wallpaper.sh &

xsetroot -cursor_name left_ptr
xmonad
