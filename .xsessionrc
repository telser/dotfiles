if [ "$NAME" == "charmy" ];
then
  tint2 &
  conky -c .conkyLeftrc &
  conky -c .conkyRightrc &
  blueman-applet &                        # Setup wireless services
  nm-applet &
  pnmixer &
  clipit &
  xfce4-power-manager &

fi
